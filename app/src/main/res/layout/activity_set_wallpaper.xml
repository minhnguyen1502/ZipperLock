<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:contentDescription="back"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/suez_one_regular"
        android:gravity="start"
        android:includeFontPadding="false"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/wallpaper"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back"
        app:layout_constraintEnd_toStartOf="@id/iv_home"
        app:layout_constraintStart_toEndOf="@id/iv_back"
        app:layout_constraintTop_toTopOf="@id/iv_back" />

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        android:src="@drawable/ic_back_to_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />
    
    <ImageView
        android:id="@+id/phone_1"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:src="@drawable/img_phone"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@id/phone_2"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        app:layout_constraintTop_toBottomOf="@id/iv_back"/>
    <ImageView
        android:id="@+id/phone_2"
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:src="@drawable/img_phone"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@id/phone_1"
        app:layout_constraintEnd_toEndOf="@id/iv_home"
        app:layout_constraintTop_toBottomOf="@id/iv_back"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_wallpaper_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="13dp"
        android:paddingVertical="5dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="24dp"
        app:layout_constraintStart_toStartOf="@id/phone_2"
        app:layout_constraintEnd_toEndOf="@id/phone_2"
        app:layout_constraintBottom_toBottomOf="@id/phone_2"
        app:layout_constraintTop_toTopOf="@id/phone_2"
        android:src="@drawable/img_wallpaper_02"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="17dp"
        android:paddingVertical="5dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="24dp"
        app:layout_constraintStart_toStartOf="@id/phone_2"
        app:layout_constraintEnd_toEndOf="@id/phone_2"
        app:layout_constraintBottom_toBottomOf="@id/phone_2"
        app:layout_constraintTop_toTopOf="@id/phone_2"
        android:src="@drawable/ikmg_change_2"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_wallpaper_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="13dp"
        android:paddingVertical="5dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="24dp"
        app:layout_constraintStart_toStartOf="@id/phone_1"
        app:layout_constraintEnd_toEndOf="@id/phone_1"
        app:layout_constraintBottom_toBottomOf="@id/phone_1"
        app:layout_constraintTop_toTopOf="@id/phone_1"
        android:src="@drawable/img_wallpaper_02"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="17dp"
        android:paddingVertical="5dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius="24dp"
        app:layout_constraintStart_toStartOf="@id/phone_1"
        app:layout_constraintEnd_toEndOf="@id/phone_1"
        app:layout_constraintBottom_toBottomOf="@id/phone_1"
        app:layout_constraintTop_toTopOf="@id/phone_1"
        android:src="@drawable/img_change_1"/>
    <TextView
        android:id="@+id/btn_set"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/set_wallpaper"
        app:layout_constraintStart_toStartOf="@id/iv_back"
        app:layout_constraintEnd_toEndOf="@id/iv_home"
        app:layout_constraintTop_toBottomOf="@id/phone_2"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold_700"
        android:textColor="@color/black"
        android:paddingVertical="14.5dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/bg_enable_lock_scrren"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>